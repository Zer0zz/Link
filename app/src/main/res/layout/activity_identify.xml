<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_normal_backgroug"
    android:gravity="center|top"
    android:orientation="vertical"
    tools:context=".identify.IdentifyActivity">

    <ProgressBar
        android:visibility="gone"
        android:layout_width="match_parent"
        style="?android:attr/progressBarStyleHorizontal"
        android:id="@+id/upload_pb"
        android:max="5"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/loyout_margin"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="@dimen/loyout_margin2"
                    android:layout_marginTop="@dimen/loyout_margin"
                    android:layout_marginRight="@dimen/loyout_margin2"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:gravity="bottom|left"
                        android:text="真实姓名"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/realname_et"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:background="@null"
                        android:gravity="bottom"
                        android:paddingBottom="5dp"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                </LinearLayout>

                               <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/loyout_margin2"
                    android:layout_marginRight="@dimen/loyout_margin2"
                    android:background="@mipmap/identify_info_underline" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="@dimen/loyout_margin2"
                    android:layout_marginTop="@dimen/loyout_margin"
                    android:layout_marginRight="@dimen/loyout_margin2"
                    android:layout_marginBottom="@dimen/loyout_margin_8"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:gravity="bottom|left"
                        android:text="手机号"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/phone_et"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:background="@null"
                        android:gravity="bottom"
                        android:paddingBottom="5dp"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                </LinearLayout>

                <View
                    android:layout_marginBottom="@dimen/loyout_margin_5"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/loyout_margin2"
                    android:layout_marginRight="@dimen/loyout_margin2"
                    android:background="@mipmap/identify_info_underline" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/loyout_margin"
                android:background="@color/white"
                android:gravity="center|top"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/loyout_margin2"
                    android:layout_marginTop="@dimen/loyout_margin"
                    android:layout_marginRight="@dimen/loyout_margin2"
                    android:gravity="bottom|left"
                    android:text="认证照片："
                    android:textSize="15sp" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_images"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/loyout_margin"
                    android:layout_marginRight="@dimen/loyout_margin"
                    android:paddingTop="@dimen/loyout_margin" />

                <LinearLayout
                    android:id="@+id/indenty_up_img_layout"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/loyout_margin2"
                    android:layout_marginTop="@dimen/loyout_margin"
                    android:layout_marginRight="@dimen/loyout_margin2"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/indenty_up_img1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@mipmap/find_add_img" />

                    <ImageView
                        android:id="@+id/indenty_up_img2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/loyout_margin_5"
                        android:layout_weight="1"
                        android:src="@mipmap/find_add_img" />

                    <ImageView
                        android:id="@+id/indenty_up_img3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/loyout_margin_5"
                        android:layout_weight="1"
                        android:src="@mipmap/find_add_img" />

                    <ImageView
                        android:id="@+id/indenty_up_img4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/loyout_margin_5"
                        android:layout_weight="1"
                        android:src="@mipmap/find_add_img" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/loyout_margin2"
                    android:layout_marginTop="@dimen/loyout_margin_8"
                    android:layout_marginRight="@dimen/loyout_margin2"
                    android:layout_marginBottom="@dimen/loyout_margin"
                    android:gravity="bottom|left"
                    android:text="注：提交相关认证材料" />

                <Button
                    android:id="@+id/identifying_btn"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="@dimen/loyout_margin3"
                    android:layout_marginTop="@dimen/loyout_margin2"
                    android:layout_marginRight="@dimen/loyout_margin3"
                    android:background="@mipmap/identify_comfirm_btn"
                    android:text="提交认证"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>